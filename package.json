{
  "name": "SoundWave",
  "private": true,
  "scripts": {
    "dev:web": "npm run dev --workspace=@soundwave/web",
    "dev:api": "npm run dev --workspace=@soundwave/api",
    "dev": "concurrently -n WEB,API -c magenta,cyan \"npm run dev:web\" \"npm run dev:api\"",
    "build:web": "npm run build --workspace=@soundwave/web",
    "build:api": "npm run build --workspace=@soundwave/api",
    "build": "npm run build:web && npm run build:api",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run test",
    "db:push": "npm run db:push --workspace=@soundwave/db",
    "db:migrate": "npm run db:migrate --workspace=@soundwave/db",
    "db:studio": "npm run db:studio --workspace=@soundwave/db",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "turbo": "^2.5.7",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/morgan": "^1.9.10",
    "passport": "^0.7.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
