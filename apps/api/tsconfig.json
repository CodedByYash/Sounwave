{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES2022",
    "types": ["node", "express"],
    "typeRoots": ["./src/types", "../../node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/types"],
  "exclude": ["__tests__", "dist", "node_modules"]
}
